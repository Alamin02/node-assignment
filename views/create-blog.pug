extends layout

block content
    .container
        h2.page-header Create Blog
        form(action="/createblog", method="post")
            .form-group
                label(for="title") Blog Title:
                input.form-control#post(type="text", name="title", placeholder="Enter Tilte of Your Blog", required)
            .form-group
                label(for="post") Post:
                textarea.form-control#post(name="post", cols="30", rows="10" placeholder="Enter Description", required)

            input.btn.btn-primary(type="submit", value="Post")